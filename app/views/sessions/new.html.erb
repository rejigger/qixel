<h1 class="text-xl font-bold text-center mb-4">Login</h1>

<% if flash[:alert] %>
  <script>
    alert("<%= j flash[:alert] %>");
  </script>
<% end %>

<%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do |form| %>
  <div class="mb-4">
    <%= form.label :email_address %><br>
    <%= form.text_field :email_address, class: "w-full px-3 py-2 border rounded bg-white" %>
  </div>

  <div class="mb-4">
    <%= form.label :password %><br>
    <%= form.password_field :password, class: "w-full px-3 py-2 border rounded bg-white" %>
  </div>

  <div>
    <%= form.submit "Login", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %> <!-- Close the form_with block -->
