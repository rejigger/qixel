<body class="bg-gray-100 m-0 p-0">

  <div class="flex flex-col items-center w-full max-w-3xl mx-auto p-4 bg-white shadow-xl rounded-xl space-y-4">

<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="mb-0">
      <%= image_tag(post.photo, class: "rounded-xl shadow-md") %>
    </div>
    <div class="text-center bg-gray-100 w-full rounded-lg p-4 mb-4">
      <%= post.title %>
      <br>
      <%= truncate(strip_tags(post.comment), length: 75) %>
      <br>
      Posted <%= time_since(post.posttime) %> ago.

      <%#= render post %> <!--commented out-->
      <br>
      <%= link_to "Show this post", post %>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>

</div>
